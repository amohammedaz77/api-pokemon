    <form action="/api/pokemon/add" method="POST">
        <input type="text" placeholder="Enter pokemon name" name="pokeName"/>
        <input type="text" placeholder="Enter attack" name="attackPower"/>        
    </form>

    <button id="btnInsert">Test Inserting a Pokemon</button>

    <button id="btnGetPokemon">Get All Pokemon</button>
    <section id="results"></section>

